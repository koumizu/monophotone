<% @user ||= current_user %>
<div class="stats flexbox">
  <a href="<%= following_user_path(@user) %>" class="btn-white">
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    フォロー
  </a>
  <a href="<%= followers_user_path(@user) %>" class="btn-white">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    フォロワー
  </a>
</div>

